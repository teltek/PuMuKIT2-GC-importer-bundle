{% extends 'PumukitNewAdminBundle::layout.html.twig' %}

{% block body %}

<h1>{{"Galicaster Importer" | trans}}</h1>
{% if series is defined and series %}<h3>{{"Importing to" | trans}} {{series[1]}}</h3>{% endif %}

{% if error is defined and error %}
  <h2 style="font-weight: bold;">Error</h2>
  <div class="row">
    <div class="col-md-10">
      <div class="well">
        {{error}}
      </div>
    </div>
  </div>
{% else %}
  <div class="row">
    <div class="col-md-10">
      <div class="well">
        <div id="list_users">
          {% include 'PumukitGCImporterBundle:GCImporter:list.html.twig' %}
        </div>
      </div>
    </div>
    <div class="col-md-2">
      {% include 'PumukitGCImporterBundle:GCImporter:filters.html.twig' %}
    </div>
  </div>
{% endif %}

{% endblock %}